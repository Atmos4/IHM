<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">


        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            >

            <!-- Les CardView possèdent des attributs supplémentaires dont
                 - cardBackgroundColor
                 - cardElevation pour l'élévation (donc aussi l'ombre)
                 - cardCornerRadius pour arrondir les angles
             -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="6">

                <!-- Les CardView agissent comme des FrameLayout,
                 pour avoir une organisation verticale nous devons
                 donc rajouter un LinearLayout -->

                <TextView
                    android:id="@+id/nutritionTitre"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#C41B26"
                    android:fontFamily="sans-serif"
                    android:padding="20dp"
                    android:text="Nutrition"
                    android:textColor="#FFFF"
                    android:textSize="18sp"
                    android:layout_weight="2"/>

                <TextView
                    android:id="@+id/nutritionTxt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:fontFamily="Roboto"
                    android:gravity="center"
                    android:text="Manger deux fruits rouges "
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/checked" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/cancel" />
                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            >

            <!-- Les CardView possèdent des attributs supplémentaires dont
                 - cardBackgroundColor
                 - cardElevation pour l'élévation (donc aussi l'ombre)
                 - cardCornerRadius pour arrondir les angles
             -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="6">

                <!-- Les CardView agissent comme des FrameLayout,
                 pour avoir une organisation verticale nous devons
                 donc rajouter un LinearLayout -->

                <TextView
                    android:id="@+id/sommeilTitre"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@color/sommeil"
                    android:fontFamily="sans-serif"
                    android:padding="20dp"
                    android:text="Sommeil"
                    android:textColor="#FFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sommeilTxt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:fontFamily="Roboto"
                    android:gravity="center"
                    android:text="Dormir à 22:00"
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/imageButton22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/checked" />

                    <ImageButton
                        android:id="@+id/imageButton21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/cancel" />
                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            >

            <!-- Les CardView possèdent des attributs supplémentaires dont
                 - cardBackgroundColor
                 - cardElevation pour l'élévation (donc aussi l'ombre)
                 - cardCornerRadius pour arrondir les angles
             -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="6">

                <!-- Les CardView agissent comme des FrameLayout,
                 pour avoir une organisation verticale nous devons
                 donc rajouter un LinearLayout -->

                <TextView
                    android:id="@+id/sportTitre"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#2D9CDB"
                    android:fontFamily="sans-serif"
                    android:padding="20dp"
                    android:text="Sport"
                    android:textColor="#FFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sportTxt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:fontFamily="Roboto"
                    android:gravity="center"
                    android:text="Déplacer en vélo"
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/imageButton31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/checked" />

                    <ImageButton
                        android:id="@+id/imageButton32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/cancel" />
                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>